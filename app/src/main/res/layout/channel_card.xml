<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    android:id="@+id/channel"
    android:visibility="gone"
    android:background="@drawable/vert_border_bg"
    android:orientation="vertical">
    <TextView
        android:textColor="@color/cement"
        android:textSize="@dimen/posterTextSize"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/channels" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_marginLeft="@dimen/channelRowMarginHori"
            android:layout_marginRight="@dimen/channelRowMarginHori"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/channelWrapper">
            <ImageView
                android:layout_marginLeft="5dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:id="@+id/channelLogo"
                android:scaleType="centerCrop"
                android:layout_width="@dimen/channelLogoWidth"
                android:layout_height="@dimen/channelLogoHeight" />
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:id="@+id/channelTextWrapper"
                android:layout_toRightOf="@+id/channelLogo"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">
            </LinearLayout>
            <TextView
                android:id="@+id/channelTag"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                android:textSize="13sp"
                android:textColor="@color/cement"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/divide" >
        </LinearLayout>
        <TextView
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:textSize="16sp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/channelViewAll"
            android:textColor="@color/colorPrimary"
            android:text="@string/viewAll" />
    </LinearLayout>
</LinearLayout>
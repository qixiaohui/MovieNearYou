<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_margin="4dp"
    android:layout_gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:elevation="2dp"
    card_view:cardCornerRadius="2dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="@dimen/similarContainerWidth"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/similarPoster"
                android:scaleType="centerCrop"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_width="@dimen/similarImageWidth"
                android:layout_height="@dimen/similarImageHeight" />
            <TextView
                android:textSize="@dimen/videoDesc"
                android:textColor="@color/cement"
                android:textAlignment="center"
                android:lines="2"
                android:ellipsize="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/similarPoster"
                android:id="@+id/similarTitle" />
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
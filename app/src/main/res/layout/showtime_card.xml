<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    android:id="@+id/showtime"
    android:visibility="gone"
    android:background="@drawable/vert_border_bg"
    android:orientation="vertical">
    <TextView
        android:textColor="@color/cement"
        android:textSize="@dimen/posterTextSize"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/showtime" />
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginLeft="@dimen/showtimeMarginHori"
        android:layout_marginRight="@dimen/showtimeMarginHori"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/date"
            android:textColor="@color/steel"
            android:textSize="@dimen/showtimeTextSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/showtimeTextMargin"
            android:layout_marginBottom="@dimen/showtimeTextMargin"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/divide" >
        </LinearLayout>
        <TextView
            android:id="@+id/cinema"
            android:textColor="@color/steel"
            android:textSize="@dimen/showtimeTextSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/showtimeTextMargin"
            android:layout_marginBottom="@dimen/showtimeTextMargin"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/divide" >
        </LinearLayout>
        <TextView
            android:id="@+id/schedule"
            android:textColor="@color/steel"
            android:textSize="@dimen/showtimeTextSize"
            android:layout_marginBottom="@dimen/showtimeTextMargin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/showtimeTextMargin" />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/divide" >
        </LinearLayout>
        <TextView
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:textSize="16sp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/showtimeViewAll"
            android:textColor="@color/colorPrimary"
            android:text="@string/viewAll" />
    </LinearLayout>
</LinearLayout>